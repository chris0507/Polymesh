{
  "name": "polymesh-cli",
  "version": "1.0.0",
  "description": "CLI for Polymesh",
  "main": "/dist/polymesh_cli.js",
  "bin": {
    "polymesh-cli": "./dist/polymesh_cli.js"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "create": "npm run build && npm run test",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && polymesh-cli",
    "clean:some": "rm -rf ./dist ./docs",
    "clean:all": "rm -rf ./node_modules ./yarn.lock ./dist ./docs",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "refresh": "npm run clean:all && yarn install",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src",
    "0_create_identities": "node ./tests/0_create_identities.js",
    "1_poly_transfer": "node ./tests/1_poly_transfer.js",
    "2_key_management": "node ./tests/2_key_management.js",
    "3_auth_join_did": "node ./tests/3_auth_join_to_did.js",
    "4_permission_management": "node ./tests/4_permission_management.js",
    "5_claim_management": "node ./tests/5_claim_management.js",
    "6_create_assets": "node ./tests/6_create_assets.js",
    "7_create_claim_compliance": "node ./tests/7_create_claim_compliance.js",
    "8_asset_transfer": "node ./tests/8_asset_transfer.js",
    "9_offchain_worker_test": "node ./tests/9_offchain_worker_test.js",
    "10_bridge_transfer": "node ./tests/10_bridge_transfer.js",
    "11_governance_management": "node ./tests/11_governance_management.js",
    "12_A_settlement": "node ./tests/12_A_settlement.js",
    "12_B_settlement": "node ./tests/12_B_settlement.js",
    "schema_test": "./util/schema_test.sh",
    "test": "npm run -s schema_test && npm run -s 0_create_identities && npm run -s 1_poly_transfer && npm run -s 2_key_management && npm run -s 3_auth_join_did && npm run -s 4_permission_management && npm run -s 5_claim_management && npm run -s 6_create_assets && npm run -s 7_create_claim_compliance && npm run -s 8_asset_transfer  npm run -s 10_bridge_transfer && npm run -s 11_governance_management && npm run -s 12_A_settlement && npm run -s 12_B_settlement"
  },
  "author": "Polymath Network",
  "license": "UNLICENSED",
  "dependencies": {
    "@liftr/tscov": "^1.4.7",
    "@polkadot/api": "^1.32.1",
    "@polkadot/keyring": "^2.6.2",
    "@polkadot/util": "^2.6.2",
    "@polkadot/util-crypto": "^2.6.2",
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "cli-progress": "^3.6.0",
    "command-line-args": "^5.1.1",
    "commander": "^5.1.0",
    "crypto-random-string": "^3.3.0",
    "esm": "^3.2.25",
    "figlet": "^1.4.0",
    "inquirer": "^7.1.0",
    "nodejs-fs-utils": "^1.2.4",
    "path": "^0.12.7",
    "pm2": "^4.2.3",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
